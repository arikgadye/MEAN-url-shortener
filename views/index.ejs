<!DOCTYPE html>
<html>
<head>
	<title>Shortn'</title>
	<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.25/angular.min.js"></script>
	<script src="../javascripts/controllers/urlController.js"></script>
	<script src="../javascripts/services/urlFactory.js"></script>
	<link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
</head>
<body ng-app="myApp" ng-controller="UrlController">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h1>Shortn'</h1>
				<br>
				<form role='form' ng-submit="addUrl()">
					<div class="form-group">
						<label>Url:</label>
						<div class="input-group">
							<div class="input-group-addon">http://</div>
							<input ng-model="url" class="form-control input-lg" placeholder="Enter a url">
						</div>
					</div>
					<div class="form-group">
						<label>Shortened:</label>
						<input class='form-control input-lg' type='text' ng-model="link">
						<br>
						<button type='submit' class='btn btn-success btn-lg'>Shortn</button>
					</div>
				</form>
				<h4>Urls</h4>
				<ul>
					<li ng-repeat="url in urls">
						<h3><a ng-href="http://{{url.url}}">{{url.link}}</a></h3>
					</li>
				</ul>
			</div>
		</div>
	</body>
	</html>
